<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%= link_to 'New User', new_user_path, class: "p-2 m-4" %>
<%= link_to 'Home', root_path, class: "p-2 m-4" %>
<br><br>
<% if @users.empty? %>
  <h3> There are no users yet </h3>
<% else %>
<table  class="table">
  <thead>
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col"> View User </th>
      <th scope="col"> Edit User </th>
      <th scope="col"> Delete User </th>
    </tr>
  </thead>

  <tbody>
     <%= render @users %>
  </tbody>
</table>

<% end %>


