%div
  %p#notice= notice
  %h1.mb-4 Books
  = link_to 'New Book', new_book_path, class: 'p-2'
  = link_to 'Home', root_path, class: 'p-2'
  %br/
  %br/
  - if @books.empty?
    %h3.mt-4 Hello, there are no books here yet
  - else
    %table.table
      %thead
        %tr
          %th{:scope => "col"} Name
          %th{:scope => "col"} Description
          %th{:scope => "col"} View
          %th{:scope => "col"} Edit
          %th{:scope => "col"} Delete
      %tbody
        = render @books
